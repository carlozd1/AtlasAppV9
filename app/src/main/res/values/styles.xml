<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TabStyle" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimaryWhite</item>
        <item name="colorPrimaryDark">@color/colorPrimaryLight</item>
        <item name="colorAccent">@color/colorPrimaryDark</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="AppThemeOno" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorOnomatopeya1</item>
        <item name="colorPrimaryDark">@color/colorOnomatopeya2</item>
        <item name="colorAccent">@color/colorOnomatopeya3</item>
    </style>

    <style name="AppThemeFon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFonema1</item>
        <item name="colorPrimaryDark">@color/colorFonema2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeSil" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSilaba1</item>
        <item name="colorPrimaryDark">@color/colorSilaba2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemePal" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPalabra1</item>
        <item name="colorPrimaryDark">@color/colorPalabra2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeFra" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorFrase1</item>
        <item name="colorPrimaryDark">@color/colorFrase2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeCon" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorConversacion1</item>
        <item name="colorPrimaryDark">@color/colorConversacion2</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


</resources>
