    <ImageButton
        android:layout_height="150dp"
        android:id="@+id/btn_tambor_tam"
        android:background="@drawable/i_tam"
        android:layout_width="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/obtn_Tambor"
        android:layout_alignStart="@+id/obtn_Tambor"
