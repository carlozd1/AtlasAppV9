<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.carlos.atlasapp.Fragments.AgregarFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id="@+id/txtName"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Nombre"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/textAp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Apellido"
        android:layout_below="@id/txtName"
        android:layout_centerHorizontal="true"
        android:inputType="textPersonName"
        />

    <EditText
        android:id="@+id/txtEdad"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Edad"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textAp"
        android:inputType="number"
        />
    <EditText
        android:id="@+id/txtDiag"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:hint="Diagnostico"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtEdad"
        android:inputType="text"
        />
    <Button
        android:id="@+id/btn_guardar"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:layout_below="@id/txtDiag"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>
