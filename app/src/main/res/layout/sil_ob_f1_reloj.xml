<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.carlos.atlasapp.Nivel3.Silabas_objetos.F1Objetos_Reloj">

    <!-- TODO: Update blank fragment layout -->

    <ImageButton
        android:layout_height="150dp"
        android:id="@+id/btn_reloj_loj"
        android:background="@drawable/ac_loj"
        android:layout_width="140dp"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_reloj_re"
        android:layout_toEndOf="@+id/btn_reloj_re" />

    <ImageButton
        android:layout_height="300dp"
        android:id="@+id/obtn_Reloj"
        android:background="@drawable/reloj"
        android:layout_above="@+id/btn_reloj_re"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp" />

    <ImageButton
        android:layout_height="150dp"
        android:id="@+id/btn_reloj_re"
        android:background="@drawable/ac_re"
        android:layout_width="140dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/obtn_Reloj"
        android:layout_alignStart="@+id/obtn_Reloj" />

</RelativeLayout>